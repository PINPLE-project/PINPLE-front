<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/light_bg_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_tiny_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_scrap_place"
        app:srcCompat="@drawable/icon_address_tiny" />

    <TextView
        android:id="@+id/tv_scrap_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="서울 용산구 이촌로72길 62"
        android:textColor="@color/color_gray_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_tiny_address"
        app:layout_constraintStart_toEndOf="@+id/iv_tiny_address"
        app:layout_constraintTop_toTopOf="@+id/iv_tiny_address" />

    <TextView
        android:id="@+id/tv_scrap_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="반포한강공원"
        android:textColor="@color/color_main_text"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_ellipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_scrap_address"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="@+id/tv_scrap_address"
        app:srcCompat="@drawable/ellipse_146" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="보통"
        android:textColor="@color/color_status_middle"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ellipse"
        app:layout_constraintEnd_toStartOf="@+id/iv_ellipse"
        app:layout_constraintTop_toTopOf="@+id/iv_ellipse" />


    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="삭제"
        android:textColor="@color/color_gray3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_scrap_place"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete"
        app:layout_constraintTop_toTopOf="@+id/tv_scrap_place" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/icon_delete_tiny"
        app:layout_constraintBottom_toBottomOf="@+id/tv_scrap_place"
        app:layout_constraintEnd_toEndOf="@+id/iv_ellipse"
        app:layout_constraintStart_toStartOf="@+id/iv_ellipse"
        app:layout_constraintTop_toTopOf="@+id/tv_scrap_place" />

</androidx.constraintlayout.widget.ConstraintLayout>