<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferenceActivity">


    <ImageView
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tab_bar" />

    <TextView
        android:id="@+id/preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="277dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="설정"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/tab_bar"
        app:layout_constraintEnd_toStartOf="@+id/exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/exit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tab_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/preferences"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_delete_tiny" />


    <Switch
        android:id="@+id/notification_pin_switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/notification_pin"
        app:layout_constraintTop_toBottomOf="@+id/notification_safety_switch_btn"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <TextView
        android:id="@+id/notification_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="알림설정"
        android:textColor="@color/color_main_text"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/notification_img"
        app:layout_constraintTop_toTopOf="@+id/notification_img" />

    <ImageView
        android:id="@+id/notification_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_bar"
        app:srcCompat="@drawable/icon_notification_black" />

    <TextView
        android:id="@+id/notification_safety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="혼잡도 안전 알림"
        android:textColor="@color/color_main_text"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/notification_img"
        app:layout_constraintTop_toBottomOf="@+id/notification_img" />

    <TextView
        android:id="@+id/safety_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="현재 위치에서 반경 1km 이내에 혼잡한 장소가 \n있다면 PUSH알림을 보내드려요"
        android:textColor="@color/color_gray3"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/notification_safety"
        app:layout_constraintTop_toBottomOf="@+id/notification_safety" />

    <Switch
        android:id="@+id/notification_safety_switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notification_safety"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/notification_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="핀 알림"
        android:textColor="@color/color_main_text"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/notification_img"
        app:layout_constraintTop_toBottomOf="@+id/safety_explain" />


    <TextView
        android:id="@+id/pin_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="내가 올린 핀에 누군가 도움이 되었어요를 \n누르면 PUSH알림을 보내드려요"
        android:textColor="@color/color_gray3"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/notification_img"
        app:layout_constraintTop_toBottomOf="@+id/notification_pin" />

    <ImageView
        android:id="@+id/preferences_line_1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:srcCompat="@drawable/preferences_line"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/pin_explain" />


    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintTop_toBottomOf="@id/preferences_line_1"
        app:layout_constraintBottom_toTopOf="@+id/email_inf"
        app:layout_constraintStart_toStartOf="@+id/notification_img"
        app:srcCompat="@drawable/icon_user_small" />


    <TextView
        android:id="@+id/account_inf"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity=""
        android:text="계정 정보"
        android:textColor="@color/color_main_text"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintStart_toEndOf="@+id/imageView15" />

    <TextView
        android:id="@+id/email_inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:text="emailemailemail@gmail.com"
        android:textColor="@color/color_gray3"
        android:textSize="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/notification_img"
        app:layout_constraintTop_toBottomOf="@+id/imageView15" />

    <TextView
        android:id="@+id/google_kakao_login_inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:text="(카카오로 로그인)"
        android:textColor="@color/color_gray3"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/email_inf"
        app:layout_constraintTop_toBottomOf="@+id/email_inf" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/notification_img"
        app:layout_constraintTop_toBottomOf="@+id/preferences_line_2"
        app:srcCompat="@drawable/icon_app_info" />

    <TextView
        android:id="@+id/app_inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="앱 정보"
        android:textColor="@color/color_main_text"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17" />

    <TextView
        android:id="@+id/app_access_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="앱 이용약관"
        android:textColor="@color/color_main_text"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toBottomOf="@+id/app_inf" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="앱 버전"
        android:textColor="@color/color_main_text"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/app_access_request"
        app:layout_constraintStart_toStartOf="@+id/notification_img" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/app_access_request"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_arrow_next" />

    <TextView
        android:id="@+id/app_version_num"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="1.0.0"
        android:textColor="@color/color_gray3"
        android:textSize="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/app_version"
        app:layout_constraintBaseline_toBaselineOf="@+id/need_update"
        app:layout_constraintStart_toStartOf="@id/app_version" />

    <TextView
        android:id="@+id/need_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:text="(최신버전)"
        android:textColor="@color/color_gray3"
        android:textSize="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/app_version_num"
        app:layout_constraintTop_toBottomOf="@id/app_version">

    </TextView>
    <ImageView
        android:id="@+id/preferences_line_2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/preferences_line"
        app:layout_constraintTop_toBottomOf="@+id/google_kakao_login_inf"
         />

    <ImageView
        android:id="@+id/preferences_line_3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:srcCompat="@drawable/preferences_line"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/need_update" />

    <TextView
        android:id="@+id/log_out_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/color_main_text"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/app_version"
        app:layout_constraintTop_toBottomOf="@id/preferences_line_3"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/Withdrawal_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:text="회원탈퇴"
        android:textColor="@color/color_error"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/preferences_line_4"
        app:layout_constraintStart_toStartOf="@id/app_version" />

    <ImageView
        android:id="@+id/preferences_line_4"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:srcCompat="@drawable/preferences_line"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/log_out_txt"/>


</androidx.constraintlayout.widget.ConstraintLayout>