<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_share"
        android:layout_width="320dp"
        android:layout_height="32dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:text="@string/landing2_text_1"
        android:textColor="@color/color_main_black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/text_pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_pin"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:text="@string/landing2_text_2"
        android:textColor="@color/color_gray_dark"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_share" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="231dp"
        android:layout_height="485dp"
        android:layout_marginBottom="166dp"
        android:src="@drawable/landing_image_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_pin" />


</androidx.constraintlayout.widget.ConstraintLayout>